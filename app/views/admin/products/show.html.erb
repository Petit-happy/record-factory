<div class="container">
  <h2><span class="label label-success">登録商品詳細</span></h2>

  <p>ジャンル名:<%= @product.genre.genre_name %></p>
  <p>レーベル名:<%= @product.label.label_name %></p>
  <p>アーティスト名:<%= @product.artist.artist_name %></p>
  <p>ジャケット写真:<%= attachment_image_tag @user, :photo, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></p>
  <p>商品価格:<%= @product.product_price.to_s(:currency, locale: :ja) %></p>
  <p>商品ステータス:<%= @product.sales_status_i18n %></p>
  <p>商品名:<%= @product.product_name %></p>

  <% @disc.each do |disc| %>
    <p>DISC NO. <%= disc.disc_no %></p>
      <% @songs.each do |song| %>
      <p>NO. <%= song.song_no %></p>
      <%= song.song_name %>
      <% end %>
  <% end %>
  <br>
  <%= link_to '商品一覧に戻る', admin_products_path, class:"btn-sm btn-success" %>
  <%= link_to '入荷情報を編集する', new_admin_product_arrival_path(@product), class:"btn-sm btn-primary" %>
  <%= link_to '商品情報を編集する', edit_admin_product_path(@product), class:"btn-sm btn-info" %>
</div>
