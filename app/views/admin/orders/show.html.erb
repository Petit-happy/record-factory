<h2><span class="label label-primary">会員様ご注文内容</span></h2>

<table>
  <tr>
    <th>受注ID : </th>
    <td><%= @order.id %></td>
    <th>購入日 : </th>
    <td><%= @order.created_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
  </tr>
</table>

<table>
<% @details.each do |detail| %>

  <tr>
    <th>画像</th>
    <td><%= attachment_image_tag detail.product, :photo, :fill, 100, 100, format: 'jpeg', fallback: "noimage.png", size:'100x100' %></td>
  </tr>
  <tr>
    <th>商品名</th>
    <td><%= detail.product.product_name %></td>
  </tr>
  <tr>
    <th>アーティスト名</th>
    <td><%= detail.product.artist.artist_name %></td>
  </tr>
  <tr>
    <th>価格(税別)</th>
    <td><%= detail.product.product_price.to_s(:delimited, delimiter: ',') %>円</td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= detail.product.genre.genre_name %></td>
  </tr>
  <tr>
    <th>レーベル名</th>
    <td><%= detail.product.label.label_name %></td>
  </tr>
  <tr>
    <th>在庫数</th>
    <td><%=  %></td>
  </tr>
  <tr>
    <th>購入個数</th>
    <td><%= @details.count %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= detail.product.sales_status_i18n %></td>
  </tr>
</table>
<% end %>

<h3><span class="label label-primary">会員様情報</span></h3>
<table class="" width="100%" height="">

    <tr>
      <th>会員様氏名</th>
      <td><%= @order.end_user.family_name_kanji %> <%= @order.end_user.given_name_kanji %></td>
    </tr>
    <tr>
      <th>配送先住所</th>
      <td><%= @order.order_address %></td>
      <th>請求先住所</th>
      <td><%= @order.end_user.address %></td>
      <!-- <th>支払い方法</th>
      <td></td> -->
    </tr>
    <tr>
      <th>商品小計</th>
      <td><%= @detail.price.to_s(:delimited, delimiter: ',') %>円</td>
    </tr>
    <tr>
      <th>消費税</th>
      <td><%= (@detail.price.to_i*0.1).round.to_s(:delimited, delimiter: ',') %>円</td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.delivery_cost %>円</td>
    </tr>
    <tr>
      <th>合計</th>
      <td><%= ((@detail.price)+((@detail.price.to_i*0.1).round)+(@order.delivery_cost)).to_s(:delimited, delimiter: ',') %>円</td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.order_status_i18n %></td>
    </tr>
</table>
