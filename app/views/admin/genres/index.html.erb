<div class="container">
  <h2><span class="label label-info">登録ジャンル一覧</span></h2>

  <%= form_for(@genre, url:admin_genres_path) do |f| %>
  <div class="field">
    <%= f.label :'ジャンル名' %><br>
    <%= f.text_field :genre_name, autofocus: true %>
  </div>
  <%= f.submit '新規ジャンル名を登録する', class:"btn btn-primary" %>
  <% end %>

  <table class="col-md-4 col-md-offset-4" width="100%">
    <thead>
      <tr>
        <th>ジャンル名</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.genre_name %></td>
         <td><%= link_to 'このジャンルを削除する', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか?' }, class:"btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
