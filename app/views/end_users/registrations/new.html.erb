<div class="container">

  <div class = "clearfix">
    <h1><span class="label label-success">アカウント登録画面</span></h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :メールアドレス %><span class="text-danger">*入力必須</span><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><span class="text-danger">*入力必須</span>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認） %><span class="text-danger">*入力必須</span><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :名前（姓） %><br />
      <%= f.text_field :family_name_kanji, autofocus: true, autocomplete: "family_name_kanji" %>
    </div>

    <div class="field">
      <%= f.label :名前（名） %><br />
      <%= f.text_field :given_name_kanji, autofocus: true, autocomplete: "given_name_kanji" %>
    </div>

    <div class="field">
      <%= f.label :名前（カナ姓）%><br />
      <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "faily_name_kana" %>
    </div>

    <div class="field">
      <%= f.label :名前（カナ姓）%><br />
      <%= f.text_field :given_name_kana, autofocus: true, autocomplete: "given_name_kana" %>
    </div>

    <div class="field">
      <%= f.label :郵便番号 %><br />
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post-code" %>
    </div>

    <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" , class:"btn btn-primary"%>
    </div>
  <% end %>

  </div>

</div>
