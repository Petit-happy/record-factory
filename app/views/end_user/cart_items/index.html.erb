 <p id="notice"><%= notice %></p>

<h1>カートの中身</h1>

<table>
  <thead>
    <tr>
      <th>ジャケット名</th>
      <th>ユーザー名</th>
      <th>製品名</th>
      <th>価格</th>
      <th>販売状態</th>
      <th>点数</th>
      <th>ジャンル</th>
      <th>アーティスト</th>
      <th>レーベル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= attachment_image_tag @user, :photo, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
        <td><%= cart_item.end_user.family_name_kanji %>　<%= cart_item.end_user.given_name_kanji %>　　</td>
        <td><%= cart_item.product.product_name %>　　</td>
        <td><%= cart_item.product.product_price %>　　</td>
        <td><%= cart_item.product.sales_status_i18n %>　　</td>
        <td><%= cart_item.cart_sum %>個　　</td>
        <td><%= cart_item.product.genre.genre_name %>　　</td>
        <td><%= cart_item.product.artist.artist_name %>　　</td>
        <td><%= cart_item.product.label.label_name %>　　</td>
        <td><%= link_to 'カートから商品を削除', end_user_cart_item_path(cart_item), method: :delete, data: { confirm: 'カートから削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>

総商品点数 　: 　<%= CartItem.total_cart_sum(@cart_items) %>
商品総計 　 :　<%= CartItem.total_cart_price(@cart_items) %>





<%= link_to 'カート内の商品を全て削除する', end_user_d_all_cart_item_path, method: :delete, data: { confirm: 'カート内の商品を全て削除しますか？' } %>

